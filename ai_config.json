{
  "ai_mode": {
    "enabled": true,
    "shadow_mode": true,
    "fallback_enabled": true,
    "description": "Shadow mode allows AI to run alongside rule-based system for comparison"
  },
  "confidence_threshold": 0.6,
  "training": {
    "auto_retrain": true,
    "retrain_every_n_cycles": 100,
    "buffer_threshold": 1000,
    "max_buffer_size": 10000,
    "training_file": "datasets/training_buffer.jsonl"
  },
  "model": {
    "architecture": "LSTM",
    "hidden_size": 128,
    "num_layers": 2,
    "dropout": 0.3,
    "embedding_dim": 64
  },
  "gpu": {
    "enabled": true,
    "device": "cuda:0",
    "batch_size": 64,
    "num_workers": 4,
    "pin_memory": true
  },
  "logging": {
    "decisions_log": "ai_decisions_log.jsonl",
    "metrics_log": "ai_metrics.jsonl",
    "verbose": true
  }
}
