  "evasion_techniques": {
    "encoding_variations": {
      "enabled": true,
      "types": ["url", "double_url", "unicode", "html_entity", "hex"]
    },
    "case_variations": {
      "enabled": true,
      "modes": ["upper", "lower", "mixed", "alternating"]
    },
    "whitespace_injection": {
      "enabled": true,
      "chars": [" ", "\t", "\n", "/**/", "%20"]
    },
    "fragment_splitting": {
      "enabled": true,
      "split_points": [2, 3, 4]
    }
  },
  
  "polymorphic_behavior": {
    "enabled": true,
    "mutation_triggers": {
      "block_rate_threshold": 0.6,
      "consecutive_failures": 5
    },
    "strategies": [
      "switch_encoding",
      "change_case",
      "add_whitespace",
      "fragment_payload",
      "rotate_user_agent",
      "adjust_timing"
    ]
  },
  
  "legitimate_traffic": {
    "enabled": true,
    "weight": 20,
    "behaviors": [
      "normal_browsing",
      "api_client",
      "mobile_app",
      "search_bot"
    ]
  }
